<div class ="login">
	<div class ="container">
		<div class ="form">

		<h1>Sign up</h1>
		<%= form_for @user do |f| %>
			<%= f.label :first_name %>
			<%= f.text_field :first_name %> <br />

			<%= f.label :last_name %>
			<%= f.text_field :last_name %> <br />

			<%= f.label :email %> 
			<%= f.text_field :email %> <br />

			<%= f.label :password %>
			<%= f.password_field :password %> <br />

			<%= f.submit %>
		<% end %>

		</div>
	</div>
</div>
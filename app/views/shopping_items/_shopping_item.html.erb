<% if shopping_item.persisted? %>
<% if shopping_item.completed? %>
<ul style="color:green"><strike>
  <li>Item : <%= shopping_item.content%></li>
  <li>Quantity : <%=shopping_item.quantity%></li>
  <li>Price : <%=shopping_item.price%></li>
  <li>Buyer : <%=shopping_item.buyer%></li>
</strike></ul>
<%= link_to "Delete", shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Mark as completed", complete_shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :patch %>
<% else %>
<ul>
  <li>Item : <%= shopping_item.content%></li>
  <li>Quantity : <%=shopping_item.quantity%></li>
  <li>Price : <%=shopping_item.price%></li>
  <li>Buyer : <%=shopping_item.buyer%></li>
</ul>
<%= link_to "Delete", shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Mark as completed", complete_shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :patch %>
<% end %>
<% end %>

